<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchParentLayoutStyle"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        style="@style/WrapContentLayoutStyle"
        android:layout_gravity="start"
        android:text="@string/playlist_maker"
        android:textColor="@color/white"
        android:textSize="@dimen/primary_text_size"
        android:fontFamily="@font/ys_text_medium" />

    <LinearLayout
        style="@style/VerticalLinearLayoutStyle">

        <Button
            android:id="@+id/buttonSearch"
            android:text="@string/search"
            app:icon="@drawable/ic_search"
            style="@style/MainScreenButtonStyle" />

        <Button
            android:id="@+id/buttonMedia"
            android:text="@string/media"
            app:icon="@drawable/ic_media"
            style="@style/MainScreenButtonStyle" />

        <Button
            android:id="@+id/buttonSettings"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings"
            style="@style/MainScreenButtonStyle" />

    </LinearLayout>
</LinearLayout>