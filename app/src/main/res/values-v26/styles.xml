<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsButtonStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingVertical">@dimen/vertical_padding</item>
        <item name="android:paddingHorizontal">@dimen/horizontal_padding</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="iconTint">@color/primary</item>
    </style>
</resources>